<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="452.0" prefWidth="731.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.CreateCourseController">
    <children>
        <Pane prefHeight="172.0" prefWidth="731.0">
            <children>
                <Label layoutX="12.0" layoutY="44.0" text="* Course Name:  " />
                <Label layoutX="15.0" layoutY="73.0" text="* CRN: " />
                <Label layoutX="297.0" layoutY="44.0" text="Start Date: " />
                <Label layoutX="14.0" layoutY="103.0" text="* Credit Hours:  " />
                <TextField fx:id="courseNameField" layoutX="101.0" layoutY="40.0" onAction="#handleCreateButtonAction" prefHeight="25.0" prefWidth="174.0" />
                <TextField fx:id="CRNField" layoutX="101.0" layoutY="69.0" onAction="#handleCreateButtonAction" prefHeight="25.0" prefWidth="174.0" />
                <TextField fx:id="creditHoursField" layoutX="101.0" layoutY="99.0" onAction="#handleCreateButtonAction" prefHeight="25.0" prefWidth="174.0" />
                <DatePicker fx:id="startDatePicker" layoutX="366.0" layoutY="40.0" onAction="#handleCreateButtonAction" />
            <Label fx:id="errorLabel" layoutX="101.0" layoutY="134.0" text="Error Label" textFill="RED" />
            <Label layoutX="15.0" layoutY="14.0" text="Required Fields Are Marked With *" />
            <DatePicker fx:id="endDatePicker" layoutX="366.0" layoutY="69.0" />
            <Label layoutX="299.0" layoutY="73.0" text="End Date: " />
            <Label layoutX="299.0" layoutY="103.0" text="Start Time: " />
            <TextField fx:id="startTimeLabel" layoutX="366.0" layoutY="99.0" prefHeight="25.0" prefWidth="174.0" />
            </children>
        </Pane>
      <TableView fx:id="gradesTableView" prefHeight="146.0" prefWidth="247.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="nameTableColumn" prefWidth="75.0" text="Name" />
          <TableColumn fx:id="typeTableColumn" prefWidth="75.0" text="Type" />
            <TableColumn fx:id="scoreTableColumn" prefWidth="75.0" text="Score" />
        </columns>
      </TableView>
      <ButtonBar prefHeight="45.0" prefWidth="683.0">
        <buttons>
          <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddButtonAction" text="Add" ButtonBar.buttonData="LEFT" />
            <Button fx:id="removeButton" mnemonicParsing="false" onAction="#handleRemoveButtonAction" text="Remove" ButtonBar.buttonData="LEFT" />
            <Button fx:id="createButton" mnemonicParsing="false" text="Create" ButtonBar.buttonData="RIGHT" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelButtonAction" text="Cancel" ButtonBar.buttonData="RIGHT" />
        </buttons>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </ButtonBar>
    </children>
</VBox>
